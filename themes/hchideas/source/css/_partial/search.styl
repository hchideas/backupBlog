.search
  padding 0 0 40px 0
  input
    line-height line-height+0.2
    border 1px solid color-white
    color color-white
    background transparent
    padding-left 4em
    @media tablet
      width 4em
      transition .5s width
      &:focus
        width 8em
  label
    display none
	
.search_mobile
  padding 0 0 10px 0
  border-bottom 1px dotted #666
  padding-bottom 13px
  line-height 20px
  input
    line-height line-height+0.2
    border 1px solid color-white
    color color-white
    background transparent
    padding-left 4em
    @media tablet
      width 4em
      transition .5s width
      &:focus
        width 8em
  label
    display none

/* PC */
form input.st-default-search-input {
	margin-top: 8px;
	font-size: 12px;
	padding: 4px 9px 4px 25px;
	height: 20px;
	width: 130px;
	color: #666;
	border: 1px solid #ccc;
	-webkit-border-radius: 15px;
	-moz-border-radius: 15px;
	-ms-border-radius: 15px;
	-o-border-radius: 15px;
	border-radius: 15px;
	-webkit-box-shadow: inset 0 1px 3px 0 rgba(0,0,0,0.17);
	-moz-box-shadow: inset 0 1px 3px 0 rgba(0,0,0,0.17);
	box-shadow: inset 0 1px 3px 0 rgba(0,0,0,0.17);
	outline: none;
	background: #fcfcfc url(/img/search_icon.png) no-repeat 7px 7px;
}

/* Mobile */
form input.st-default-search-input_mobile {
	font-size: 12px;
	padding: 4px 9px 4px 25px;
	margin-right: 10px;
	height: 20px;
	width: 200px;
	color: #c2c2c2;
	border: 2px solid #000;
	-webkit-border-radius: 15px;
	-moz-border-radius: 15px;
	-ms-border-radius: 15px;
	-o-border-radius: 15px;
	border-radius: 15px;
	-webkit-box-shadow: inset 0 1px 3px 0 rgba(0,0,0,0.17);
	-moz-box-shadow: inset 0 1px 3px 0 rgba(0,0,0,0.17);
	box-shadow: inset 0 1px 3px 0 rgba(0,0,0,0.17);
	outline: none;
	background: rgba(0,0,0,0.5) url(/img/search_icon.png) no-repeat 7px 7px;
}

/* Search Hint, Mobile */
.search-hint {
  margin-top: 10px;
  margin: 0.4em auto;
  line-height: 1.2em;
  max-height: 3.6em;
  overflow: hidden;
  font-size: 0.8em;
  text-align: right;
  color: #808080;
}

/*搜索结果区, PC*/
#local-search-result {
  margin: auto 18px auto 18px;
  margin-top: 10px;
  font-size: 1.0em;
  text-align: left;
  word-break: break-all;
}

#local-search-result ul.search-result-list li:hover {
  font-weight: normal;
}

/*单条搜索结果*/
#local-search-result li {
  margin: 0.5em auto;
  border-bottom: 2px solid #d3d3d3;
}
#local-search-result .search-result-list li:hover {
  background: rgba(158,188,226,0.21);
  box-shadow: 0 0 5px rgba(0,0,0,0.2);
}

/*匹配的标题*/
#local-search-result a.search-result-title {
  line-height: 1.2;
  font-weight: bold;
  color: #d92142;
}

/*搜索预览段落*/
#local-search-result p.search-result {
  margin: 0.4em auto;
  line-height: 1.2em;
  max-height: 3.6em;
  overflow: hidden;
  font-size: 0.9em;
  text-align: justify;
  color: #CDDC39;
}

/*匹配的关键词*/
#local-search-result em.search-keyword {
  color: #f58e90;
  border-bottom: 1px dashed #f58e90;
  font-weight: bold;
  font-size: 0.85em;
}

/*搜索结果区, Mobile*/
#local-search-result_mobile {
  margin: 0 2% auto 0;
  font-size: 0.9em;
  text-align: left;
  word-break: break-all;
}

#local-search-result_mobile ul.search-result-list li:hover {
  font-weight: normal;
}

/*单条搜索结果*/
#local-search-result_mobile li {
  margin: 0.5em auto;
  border-bottom: 1px solid #999;
}
#local-search-result_mobile .search-result-list li:hover {
  background: rgba(158,188,226,0.21);
  box-shadow: 0 0 5px rgba(0,0,0,0.2);
}

/*匹配的标题*/
#local-search-result_mobile a.search-result-title {
  line-height: 1.0;
  font-weight: bold;
  color: #d92142;
}

/*搜索预览段落*/
#local-search-result_mobile p.search-result {
  margin: 0.4em auto;
  line-height: 1.2em;
  max-height: 3.6em;
  overflow: hidden;
  font-size: 0.9em;
  text-align: justify;
  color: #CDDC39;
}

/*匹配的关键词*/
#local-search-result_mobile em.search-keyword {
  color: #f58e90;
  /* border-bottom: 1px dashed #f58e90; */
  font-weight: bold;
}

/*无匹配搜索结果时显示*/
p.no-result {
  display: none;
  margin: 2em 0 2em 6%;
  padding-bottom: 0.5em;
  text-align: left;
  color: #CDDC39;
  font-family: font-serif serif;
  border-bottom: 2px solid #d3d3d3;
}

/*加载XML文件时显示*/
p.loading-xml {
  display: none;
  margin: 2em 0 2em 6%;
  padding-bottom: 0.5em;
  text-align: left;
  color: #CDDC39;
  font-family: font-serif serif;
  border-bottom: 2px solid #d3d3d3;
}